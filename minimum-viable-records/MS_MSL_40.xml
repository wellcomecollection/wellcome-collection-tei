                    <msContents>
                        
                        <summary>First volume containing lectures 1 to 11</summary>
                            
                        <msItem n="1" xml:id="MS_MSL_40_A_1">
                            <locus from="1" to="3">folios 1 to 3</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Introduction</title>
                            <note>
                                <p>A transcript of Hunter's words, in the first person, ending with the (copy) signature J. HUNTER.</p>
                            </note>         
                        </msItem>
                        
                        <msItem n="2" xml:id="MS_MSL_40_A_2">
                            <locus from="4" to="7">folios 4 to 7. Aphorisms 1-21</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Rationale of Surgery</title>       
                        </msItem>
                        
                        <msItem n="3" xml:id="MS_MSL_40_A_3">
                            <locus from="7" to="7">folio 7. Aphorisms 22-23 </locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Fermentation of Animals</title>     
                        </msItem>
                        
                        <msItem n="4" xml:id="MS_MSL_40_A_4">
                            <locus from="7" to="10">folios 7 to 10. Aphorisms 24-38</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Principles of Life</title>       
                        </msItem>
                        
                        <msItem n="5" xml:id="MS_MSL_40_A_5">
                            <locus from="10" to="11">folios 10 to 11. Aphorisms 39-43</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Actions of Animals</title>       
                        </msItem>
                        
                        <msItem n="6" xml:id="MS_MSL_40_A_6">
                            <locus from="11" to="12">folios 11 to 12. Aphorisms 44-48</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>The Stomach</title>
                        </msItem>
                        
                        <msItem n="7" xml:id="MS_MSL_40_A_7">
                            <locus from="14" to="17">folios 14 to 17. Aphorisms 49-68</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>The Vascular System</title>       
                        </msItem>
                        
                        <msItem n="8" xml:id="MS_MSL_40_A_8">
                            <locus from="17" to="89">folios 17 to 89. Aphorisms 69-481</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Brain and Nerves</title>
                            <note>
                                <p>From this point the headings are discontinued, and the text proceeds continuously. The aphorisms summarize Hunter's general views on physiology and disease. This ends the First Part.</p>
                            </note>         
                        </msItem>
                        
                        <msItem n="9" xml:id="MS_MSL_40_A_9">
                            <locus from="90" to="108">folios 90 tp 108. Aphorisms 482-569</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Illustration of the Doctrines contained in the First Part</title>      
                        </msItem>
                        
                        <msItem n="10" xml:id="MS_MSL_40_A_10">
                            <locus from="108" to="135">folios 108 to 135. Aphorisms 570-723</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Surgery: Fractures</title>
                        </msItem>
                        
                        <msItem n="11" xml:id="MS_MSL_40_A_11">
                            <locus from="135" to="156">folios 135 to 156. Aphorisms 724-847</locus>
                            <author key="person_100368494" source="VIAF">
                                <persName>John Hunter</persName></author>
                            <title>Surgery: Fractures</title>
                            <note>
                                <p>Followed by an index for the first volume, folios 157-158.</p>
                            </note>         
                        </msItem>
                        
